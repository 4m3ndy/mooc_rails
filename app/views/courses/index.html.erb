<div class="container">
  <div class="page-header">
    <h1 class="text-center">Courses</h1>
  </div>
  <p class="lead text-center">"The Expert in Everything was once a beginner" by Helen Hayes</p>
  <div class="container">
    <div class="row stylish-panel">
      <% @courses.each do |course| %>
        <div class="col-md-3">
          <div>
            <img src="http://lorempixel.com/200/200/abstract/1/" alt="Texto Alternativo" class="img img-thumbnail">
            <h2><%= course.title %></h2>
            <p>By: <%= link_to course.user.name %></p>
            <%= link_to 'View Course', course, class: 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- /container -->
